@model List<MicroService.UI.Obilet.MVC.Models.BusModels.BusJourneyViewModel>
@{

    ViewBag.Title = "Journey Index";
}

<div style="background-color:#2F4EB4;">
    <a href="~/home/" class="from-control btn text-white"><i class="fa-solid fa-arrow-left"></i></a>
    <div style="text-align: center;">
        <h7 class="text-white">
            @Model.Select(x => x.OriginLocation).FirstOrDefault() - @Model.Select(x => x.DestinationLocation).FirstOrDefault()
        </h7>
    <br />
        <h9 class="text-white">
            @Model.Select(x => x.Journey.Departure.Value.ToString("dd MMMM dddd")).FirstOrDefault()
        </h9>
    </div>
</div>

<div style="overflow-x:auto;height">
    @foreach (var item in Model)
    {
        <div class="card mt-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-8">
                            <div style="display:flex;">                            
                                <div>
                                    <p style="font-size:10px;margin:5px;">KALKIŞ</p>
                                    <p class="font-weight-bold hour-text">@item.Journey.Departure.Value.ToString("HH:mm")</p>
                                </div>
                                <div style="margin:12px;"><i class="fa fa-arrow-right"></i></div>
                                <div>
                                    <p style="font-size:10px;margin:5px;">VARIŞ</p>
                                    <p class="font-weight-bold hour-text">@item.Journey.Arrival.Value.ToString("HH:mm")</p>
                                </div>
                            </div>
                        </div>
                    <div class="col-4 price-button-card">
                        <div class="btn btn-danger price-button" type="button" name="name">@item.Journey.OriginalPrice TL</div>
                    </div>
                </div>
                <p class="card-text">@item.Journey.Origin - @item.Journey.Destination </p>
            </div>
        </div>
    }
</div>